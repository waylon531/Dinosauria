fragment_program lighting glsl
{
	source lighting.glsl
}

abstract fragment_program lightingProgram glsl
{
	default_params
	{
		param_named_auto lightPosition light_position_object_space 0
		param_named_auto lightDiffuse light_diffuse_colour 0
		param_named_auto lightSpecular light_specular_colour 0
		param_named_auto lightDirection light_direction 0

		param_named_auto lightAmbient ambient_light_colour
		
		param_named_auto cameraPosition camera_position_object_space
	}
	attach lighting
}
